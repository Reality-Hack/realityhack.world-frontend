# syntax = docker/dockerfile:1

# Adjust NODE_VERSION as desired
ARG NODE_VERSION=20.16.0
FROM node:${NODE_VERSION}-slim as base

LABEL fly_launch_runtime="Next.js"

# Next.js app lives here
WORKDIR /app

# Set production environment
ENV NODE_ENV="production"

# Install pnpm
RUN npm install -g pnpm@latest

# Throw-away build stage to reduce size of final image
FROM base as build

# Install packages needed to build node modules
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y build-essential node-gyp pkg-config python-is-python3

# Install node modules
COPY --link package.json pnpm-lock.yaml ./
RUN pnpm install --frozen-lockfile

# Copy application code
COPY --link . .

ARG NEXT_PUBLIC_BACKEND_URL
ARG NEXT_PUBLIC_BACKEND_WS_URL
ARG NEXT_PUBLIC_TEAM_FORMATION_STAGE

ARG NEXT_PUBLIC_IS_EVENTS_ENABLED
ARG NEXT_PUBLIC_IS_HOME_ENABLED
ARG NEXT_PUBLIC_IS_ADMIN_ENABLED
ARG NEXT_PUBLIC_IS_SETTINGS_TAB_ENABLED
ARG NEXT_PUBLIC_IS_SCHEDULE_ENABLED
ARG NEXT_PUBLIC_IS_SPONSOR_DASHBOARD_ENABLED
ARG NEXT_PUBLIC_IS_SHOWCASE_ENABLED
ARG NEXT_PUBLIC_IS_TRACKS_ENABLED
ARG NEXT_PUBLIC_IS_WORKSHOPS_ENABLED
ARG NEXT_PUBLIC_IS_RESOURCES_TAB_ENABLED
ARG NEXT_PUBLIC_IS_EVENT_GUIDE_ENABLED
ARG NEXT_PUBLIC_IS_HACKERS_MET_ENABLED
ARG NEXT_PUBLIC_IS_LIGHTHOUSES_ENABLED
ARG NEXT_PUBLIC_IS_HARDWARE_CHECKOUT_ENABLED
ARG NEXT_PUBLIC_IS_TEAMS_ENABLED
ARG NEXT_PUBLIC_IS_HACKER_HELP_ENABLED
ARG NEXT_PUBLIC_IS_MENTOR_HELP_ENABLED

ENV NEXT_PUBLIC_BACKEND_URL=${NEXT_PUBLIC_BACKEND_URL}
ENV NEXT_PUBLIC_BACKEND_WS_URL=${NEXT_PUBLIC_BACKEND_WS_URL}
ENV NEXT_PUBLIC_TEAM_FORMATION_STAGE=${NEXT_PUBLIC_TEAM_FORMATION_STAGE}

ENV NEXT_PUBLIC_IS_EVENTS_ENABLED=${NEXT_PUBLIC_IS_EVENTS_ENABLED}
ENV NEXT_PUBLIC_IS_HOME_ENABLED=${NEXT_PUBLIC_IS_HOME_ENABLED}
ENV NEXT_PUBLIC_IS_ADMIN_ENABLED=${NEXT_PUBLIC_IS_ADMIN_ENABLED}
ENV NEXT_PUBLIC_IS_SETTINGS_TAB_ENABLED=${NEXT_PUBLIC_IS_SETTINGS_TAB_ENABLED}
ENV NEXT_PUBLIC_IS_SCHEDULE_ENABLED=${NEXT_PUBLIC_IS_SCHEDULE_ENABLED}
ENV NEXT_PUBLIC_IS_SPONSOR_DASHBOARD_ENABLED=${NEXT_PUBLIC_IS_SPONSOR_DASHBOARD_ENABLED}
ENV NEXT_PUBLIC_IS_SHOWCASE_ENABLED=${NEXT_PUBLIC_IS_SHOWCASE_ENABLED}
ENV NEXT_PUBLIC_IS_TRACKS_ENABLED=${NEXT_PUBLIC_IS_TRACKS_ENABLED}
ENV NEXT_PUBLIC_IS_WORKSHOPS_ENABLED=${NEXT_PUBLIC_IS_WORKSHOPS_ENABLED}
ENV NEXT_PUBLIC_IS_RESOURCES_TAB_ENABLED=${NEXT_PUBLIC_IS_RESOURCES_TAB_ENABLED}
ENV NEXT_PUBLIC_IS_EVENT_GUIDE_ENABLED=${NEXT_PUBLIC_IS_EVENT_GUIDE_ENABLED}
ENV NEXT_PUBLIC_IS_HACKERS_MET_ENABLED=${NEXT_PUBLIC_IS_HACKERS_MET_ENABLED}
ENV NEXT_PUBLIC_IS_LIGHTHOUSES_ENABLED=${NEXT_PUBLIC_IS_LIGHTHOUSES_ENABLED}
ENV NEXT_PUBLIC_IS_HARDWARE_CHECKOUT_ENABLED=${NEXT_PUBLIC_IS_HARDWARE_CHECKOUT_ENABLED}
ENV NEXT_PUBLIC_IS_TEAMS_ENABLED=${NEXT_PUBLIC_IS_TEAMS_ENABLED}
ENV NEXT_PUBLIC_IS_HACKER_HELP_ENABLED=${NEXT_PUBLIC_IS_HACKER_HELP_ENABLED}
ENV NEXT_PUBLIC_IS_MENTOR_HELP_ENABLED=${NEXT_PUBLIC_IS_MENTOR_HELP_ENABLED}

# Build application
RUN pnpm run build

# Remove development dependencies
RUN pnpm prune --prod

# Final stage for app image
FROM base

# Copy built application
COPY --from=build /app /app

# Start the server by default, this can be overwritten at runtime
EXPOSE 3000
CMD [ "pnpm", "run", "start" ]
